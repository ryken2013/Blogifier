@page
@model App.Pages.Admin.Posts.EditModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Edit";
}

<link href="~/admin/markdown/simplemde.min.css" rel="stylesheet" />
@{
    var img = string.IsNullOrEmpty(Model.PostItem.Cover) ? Model.Blog.Cover : Model.PostItem.Cover;
    img = $"{Url.Content("~/")}{img}";
    var btnDisabled = Model.PostItem.Id == 0 ? "disabled" : "";
}

<form id="frmEditor" class="bf-editor-form" method="post" asp-antiforgery="true">
    <div class="bf-body bf-editor-body">
        <div id="post-edit" class="bf-editor d-flex flex-column">
            <!-- Editor Header -->
            <div class="bf-editor-header" style="background-image:url('@img');">
                <div class="container">
                    <textarea asp-for="PostItem.Title" class="bf-editor-title" id="txtPostTitle" rows="1" tabindex="1" placeholder="@Localizer["post-title"]..." autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" autofocus></textarea>
                </div>
            </div>
            <!--/Editor Header -->
            <!-- Editor Footer -->
            <div class="bf-editor-footer">
                <div class="container d-flex">

                    <div id="action-buttons" class="mr-2 act-new">
                        <div class="btn-group">
                            <button type="button" tabindex="3" onclick="editorController.save('P'); return false;" class="btn btn-sm btn-primary btn-rounded">@Localizer["publish"]</button>
                            <button type="button" tabindex="4" class="btn btn-sm btn-primary dropdown-toggle dropdown-toggle-split btn-rounded" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" tabindex="5" href="#" onclick="editorController.save(); return false;">@Localizer["save"]</a>
                            </div>
                        </div>
                    </div>

                    <div id="action-buttons" style="display: none" class="mr-2 act-upd">
                        <div class="btn-group">
                            <button type="button" tabindex="3" onclick="editorController.save(); return false;" class="btn btn-sm btn-primary btn-rounded">@Localizer["save"]</button>
                            <button type="button" tabindex="4" class="btn btn-sm btn-primary dropdown-toggle dropdown-toggle-split btn-rounded" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; transform: translate3d(97px, 35px, 0px); top: 0px; left: 0px; will-change: transform;">
                                @if (Model.PostItem.Published > DateTime.MinValue)
                                {
                                <a class="dropdown-item" tabindex="5" href="#" onclick="editorController.unpublish(); return false;">@Localizer["unpublish"]</a>
                                }
                                else
                                {
                                <a class="dropdown-item" tabindex="5" href="#" onclick="editorController.publish(); return false;">@Localizer["publish"]</a>
                                }
                                <a class="dropdown-item" tabindex="6" href="#" onclick="editorController.remove(); return false;">@Localizer["delete"]</a>
                            </div>
                        </div>
                        <a href="~/posts/@Model.PostItem.Slug" id="btn-view" tabindex="7" target="_blank" class="btn btn-sm btn-outline-light btn-rounded ml-2" aria-label="View post" title="View" data-placement="bottom">@Localizer["view"]</a>
                    </div>

                    <a href="~/admin" tabindex="8" class="btn btn-sm btn-outline-light btn-rounded ml-2" aria-label="Cancel" title="Cancel" data-placement="bottom">@Localizer["cancel"]</a>

                    <div class="loading loading-sm ml-3"><div class="loading-dot-1"></div><div class="loading-dot-2"></div><div class="loading-dot-3"></div></div>
                    <div class="btn-group ml-auto d-none d-lg-flex">
                        <button @btnDisabled class="btn btn-sm btn-rounded btn-icon btn-outline-light" tabindex="9" data-tooltip title="@Localizer["cover"]" onclick="fileManagerController.open(updatePostCoverCallback); return false;"><i class="fa fa-photo"></i></button>
                        <button @btnDisabled class="btn btn-sm btn-rounded btn-icon btn-outline-light" tabindex="10" data-tooltip title="@Localizer["settings"]" onclick="return editorController.settings()"><i class="fa fa-cog"></i></button>
                    </div>

                    <!-- Mobile Menu -->
                    <div class="dropdown ml-auto d-block d-lg-none">
                        <button class="btn btn-sm btn-rounded btn-icon btn-outline-light" tabindex="11" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-ellipsis-h"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                            <button @btnDisabled class="dropdown-item" tabindex="12" onclick="return fileManagerController.open(updatePostCoverCallback); return false;"><i class="fa fa-photo"></i> @Localizer["cover"]</button>
                            <button @btnDisabled class="dropdown-item" tabindex="13" onclick="return editorController.settings()"><i class="fa fa-cog"></i> @Localizer["settings"]</button>
                        </div>
                    </div>
                    <!--/Mobile Menu -->
                </div>
            </div>
            <!--/Editor Footer -->
            @* <div class="editor-hdr-wrapper">&nbsp;</div> *@
            <!-- Editor -->
            <textarea id="mdEditor" tabindex="2" rows="4" cols="50"></textarea>
            <input type="hidden" asp-for="PostItem.Id" />
            <input type="hidden" asp-for="PostItem.Slug" />
            <input type="hidden" asp-for="PostItem.Content" />
            <input type="hidden" asp-for="PostItem.Status" />
            <input type="hidden" asp-for="PostItem.Featured" />
            <!--/Editor -->
        </div>
    </div>

    <!-- Modal Description -->
    <div class="modal fade" id="postSettings" tabindex="-1" role="dialog" aria-labelledby="settingsLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="settingsLabel">@Localizer["settings"]</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-group-label">@Localizer["description"]</label>
                        <textarea rows="4" asp-for="PostItem.Description" class="form-control" autofocus></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-group-label">@Localizer["categories"]</label>
                        <textarea rows="2" asp-for="PostItem.Categories" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-group-label">@Localizer["published"]</label>
                        <input type="text" asp-for="PostItem.Published" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<partial name="~/Pages/Admin/Shared/_FileMgr.cshtml" />

@section Scripts{
    <script src="~/admin/js/app/editorController.js"></script>
    <script src="~/admin/js/app/fileManagerController.js"></script>
    <script src="~/admin/markdown/simplemde.min.js"></script>
    <script>
        editorController.loadButtons('@Model.PostItem.Id');
        var simplemde = getEditor();
    </script>
    @if (Model.ShowMessage)
    {
        <script>toastr.success('@Model.Message')</script>
    }
    @if (Model.ShowError)
    {
        <script>toastr.error('@Model.Error')</script>
    }
}
